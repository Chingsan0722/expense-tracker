<div class="row">
  <div class="col-md-8 m-auto">
    <div class="card card-body mt-5">
      <h2 class="text-center mt-3">阿爸欸記帳本</h2>
      <div class="form-group">
        <label for="exampleSelect1" class="form-label mt-4">Type select</label>
        <select class="form-select" id="exampleSelect1">
          <option value="all">All</option>
          <option value="income">Income</option>
          <option value="expense">Expense</option>
          <option value="clothes">Clothes</option>
          <option value="food">Food</option>
          <option value="living">Living</option>
          <option value="traffic">Traffic</option>
          <option value="salary">Salary</option>
          <option value="bonus">Bonus</option>
          <option value="invest">Invest</option>
        </select>
        {{!-- <i class="fa-solid fa-home"></i>
        <i class="fa-solid fa-van-shuttle"></i>
        <i class="fa-solid fa-face-grin-beam"></i>
        <i class="fa-solid fa-utensils"></i>
        <i class="fa-solid fa-pen"></i> --}}
      </div>
      <h1>Total Amount： 29830 $</h1>
      <table class="table table-hover table-striped">
        <thead class="table-primary">
          <tr>
            <th scope="col">Type</th>
            <th scope="col">Name</th>
            <th scope="col">Amount</th>
            <th scope="col">Date</th>
            <th scope="col">In/Out</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each expenseData}}
          <tr class="table-active">
            <th scope="row">{{this.category}}</th>
            <td>{{this.name}}</td>
            <td>{{this.amount}}</td>
            <td>{{this.date}}</td>
            <td>{{this.amountType}}</td>
            <td class="text-end">
              <a href="/expense/{{this._id}}/edit" class="badge bg-primary text-decoration-none">Edit</a>
              <form action="/expense/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button class="badge bg-danger text-decoration-none" type="submit">X</button>
              </form>
              
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <a href="/expense/new" class="btn btn-primary"> + New Cost</a>
    </div>
  </div>
</div>
