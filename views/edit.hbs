<div class="row justify-content-center">
  <div class="col-8 mt-5">
    <form action="/expense/{{expenseData._id}}/edit?_method=PUT" method="POST">
      <div class="btn-group" role="group" aria-label="Income or Expense">
        <input type="radio" class="btn-check" name="amountType" id="income" value="收入" autocomplete="off" required>
        <label class="btn btn-outline-info" for="income" value="Income">收入</label>
        <input type="radio" class="btn-check" name="amountType" id="expense" value="支出" autocomplete="off" required>
        <label class="btn btn-outline-success" for="expense" value="Expense">支出</label>
      </div>
      <div class="form-group">
        <fieldset>
          <label class="form-label mt-4" for="name">名稱</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Name or Details" value="{{expenseData.name}}" required>
        </fieldset>
      </div>
      <label for="date">日期</label>
      <input id="date" name="date" class="form-control" type="date" value="{{expenseData.date}}" required>

      <label for="categoryId">種類</label>
        <select class="form-select" id="categoryId" name="categoryId" aria-label="Floating label select">
          <option value={{expenseData.category_id.id}}>{{expenseData.category_id.category}}</option>
          <optgroup label="支出"></optgroup>
          <option value= 1>家居物業</option>
          <option value= 2>交通出行</option>
          <option value= 3>休閒娛樂</option>
          <option value= 4>餐飲食品</option>
          <option value= 5>其他</option>
          <optgroup label="收入"></optgroup>
          <option value= 6>薪資收入</option>
          <option value= 7>額外收入</option>
          <option value= 8>投資收入</option>
        </select>
      <div class="form-group">
        <label class="form-label mt-4" for="amount">金額</label>
        <div class="form-group">
          <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input type="number" class="form-control" id="amount" name="amount" value="{{expenseData.amount}}" aria-label="Amount" required>
            <span class="input-group-text">TWD</span>
          </div>
          <div class="text-center mt-5">
            <button type="submit" class="btn btn-primary">儲存</button>
            <a href="/" class="btn btn-dark">返回</a>
          </div>
    </form>
  </div>
</div>